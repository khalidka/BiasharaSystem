<div class="card text-center container shadow p-3 mb-5 bg-white rounded">
  <div class="card-header">
    <h4>Show Patient</h4>
  </div>
  <div class="card-body fs-40">
     <strong>Name:</strong>
     <%= @patient.name %><br>
     <strong>Phone number:</strong>
     <%= @patient.phone_number %> <br>
     <strong>Status:</strong>
     <%= @patient.status %> <br>
     <strong>Location:</strong>
     <%= @patient.location %> <br>
     <strong>Record at:</strong>
     <%= @patient.record_at %>
  </div>
  <div class="card-footer text-muted">
    <%= link_to 'Edit', edit_patient_path(@patient), class: "btn btn-secondary" %> 
    <%= link_to 'Back', patients_path, class: "btn btn-dark" %>
  </div>
</div>












